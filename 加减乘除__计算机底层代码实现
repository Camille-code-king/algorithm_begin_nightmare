#include<iostream>
#include<limits>
using namespace std;
int sum(int a, int b) {
    while (b) {
        int carry = a & b;
        a = a ^ b;
        b = (carry << 1);
    }
    return a;
}
int anti(int num) {
    return sum(~num, 1);
}
int diff(int a, int b) {
    return sum(a, anti(b));
}
int divs(int a, int b) {
    int x = a > 0 ? a : anti(a);
    int y = b > 0 ? b : anti(b);
    int ans = 0;
    for (int i = 30; i >= 0; i = diff(i, 1)) {
        if ((x >> i) >= y) {
            x = diff(x, (y << i));
            ans |= (1 << i);
        }
    }
    return (a ^ b) < 0 ? anti(ans) : ans;
}
int timev(int a, int b) {
    int ans = 0;
    while (b) {
        if (b & 1) {
            ans = sum(ans, a);
        }
        a <<= 1;
        b >>= 1;
    }
    return ans;
}
int divide(int a, int b) {
    if (a == INT_MIN && b == INT_MIN)return 1;
    if (b == INT_MIN)return 0;
    if (a == INT_MIN) {
        if (b == -1)return INT_MAX;
        return b > 0 ? diff(divs(sum(a, b), b), 1) : sum(divs(diff(a, b), b), 1);
    }
    return divs(a, b);
}
int main() {
    int a = 10;
    int b = 3;
    cout << timev(a, b)<<endl;
    return 0;
}
