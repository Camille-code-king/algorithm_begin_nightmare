class Solution {
    int ans=INT_MAX;
    int pre=-1;
    void find(TreeNode* root){
        if(root==nullptr)return;
        find(root->left);
        if(pre==-1)pre=root->val;
        else {
            ans=min(ans,root->val-pre);
            pre=root->val;
        }
        find(root->right);
    }
public:
    int getMinimumDifference(TreeNode* root) {
        find(root);
        return ans;
    }
};
