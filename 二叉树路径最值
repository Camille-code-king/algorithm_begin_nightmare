/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
    int ans=0;
    void maxminElement(TreeNode* root,int maxv,int minv){
        if(root==nullptr){
            ans=max(ans,maxv-minv);
            return;
        }
        maxv=max(root->val,maxv);
        minv=min(root->val,minv);
        maxminElement(root->left,maxv,minv);
        maxminElement(root->right,maxv,minv);
    }
public:
    int maxAncestorDiff(TreeNode* root) {
        maxminElement(root,root->val,root->val);
        return ans;
    }
};
