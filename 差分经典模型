#include<bits/stdc++.h>
using namespace std;
int main(){
	int n,p,x,y,z;
	int minv=INT_MAX;
	cin>>n>>p;
    vector<int>stu(n+2,0);
    for(int i=1;i<=n;i++)
    cin>>stu[i];
    vector<int>diff(n+2,0);
    for(int i=1;i<=n;i++){
    	diff[i]=stu[i]-stu[i-1];
	}
    for(int i=0;i<p;i++){
    	cin>>x>>y>>z;
    	diff[x]+=z;
    	diff[y+1]-=z;
	}
	for(int i=1;i<=n;i++){
		stu[i]=stu[i-1]+diff[i];
		minv=min(stu[i],minv);
	}
	cout<<minv;
	return 0;
}
